  {{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.

     * Create a button in `index.handlebars` that will submit the user input into the database. --}}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12"id="title">
            <h1> Alyssa's Burger Shack!</h1>
        </div>
    </div>

    <div class= "row" id="orderBurger">
            <div class="col-lg-12 col-md-12 col-sm-12"></div>
                <h2>Order a Burger?</h2>
                <form class="create-form" >

                    <div class="form-group">
                        <label for="ca"> Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>
                </div>
                <button type="submit">Add Burger</button>
                </form>
            </div>
    </div>

    <div class= "row">
        <div class="col-lg-3 col-md-3"id="burgerOrdered">
            <h2>Burgers Ordered</h2>

            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        {{> burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div> 
        <div class="col-lg-6 col-md-6"id="burgerImage">  
            <img src="/assets/img/burger.png" width="400px" id="burgerImg">
        </div>

        <div class="col-lg-3 col-md-3"id="burgerEaten">     
            <h2>Burgers Eaten</h2>

            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        {{> burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>

